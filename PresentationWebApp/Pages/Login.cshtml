@using (Html.BeginForm("SubmitForm", "Login"))
{
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="card">
                <div class="card-header">
                    <h1>Enter Credentials</h1>
                </div>

                <div class="card-body text-center">
                    <!--<label for="txtUsername">Username: </label><input type="text" id="txtUsername" name="Username" />-->
                    @Html.TextBox("Username")

                    <br /><br />

                    <!--<label for="txtPassword">Password: </label><input type="text" id="txtPassword" name="Password" />-->
                    @Html.TextBox("Password")

                    <br /><br />

                    <!--<label for="selTable">View Table: </label><select id="selTable" name="Table"><option value="customers">Customers</option><option value="employees">Employees</option><option value="orders">Orders</option></select>-->
