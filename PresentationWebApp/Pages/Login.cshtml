                    <!--<input type="submit" value="Submit" />-->
                    <!--<a asp-page="/Error" asp-route-ID="HelloWorld" class="btn btn-primary m-1">View</a>-->
                    <!--<a asp-page="/View" asp-route-ID="" class="btn btn-primary m-1">Submit</a>-->
                    <!--<a asp-page="/Password" asp-route-txtUsername class="btn btn-primary m-1">Submit</a>-->
